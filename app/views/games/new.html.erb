<h1>New game</h1>


<ul><%@letters.each do |letter| %>
  <li> <%= letter %> </li>
<% end %>
</ul>

<form action="/score" method="post">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
  <label for="word">What's the longest word you can find?<br></label>
  <input type="text" name="word" placeholder="Longest word you can find"><br>
  <input type="submit" name="submit">
</form>
